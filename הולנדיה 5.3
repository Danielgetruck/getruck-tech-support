/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Segoe UI', -apple-system, BlinkMacSystemFont, 'Roboto', sans-serif;
    background: linear-gradient(135deg, #e0f2fe 0%, #b3e5fc 50%, #81d4fa 100%);
    min-height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20px;
    line-height: 1.6;
}

/* Main Container */
.container {
    background: rgba(255, 255, 255, 0.95);
    border-radius: 20px;
    padding: 48px;
    max-width: 900px;
    width: 100%;
    box-shadow: 0 20px 40px rgba(3, 169, 244, 0.15), 
                0 8px 16px rgba(3, 169, 244, 0.1);
    border: 1px solid rgba(3, 169, 244, 0.2);
    backdrop-filter: blur(10px);
}

/* Header Styles */
.header {
    text-align: center;
    margin-bottom: 48px;
    border-bottom: 2px solid rgba(3, 169, 244, 0.2);
    padding-bottom: 32px;
}

.header h1 {
    color: #01579b;
    font-size: 2.25rem;
    font-weight: 700;
    margin-bottom: 8px;
    letter-spacing: -0.025em;
    text-shadow: 2px 2px 4px rgba(3, 169, 244, 0.1);
}

.header p {
    color: #0277bd;
    font-size: 1.125rem;
    font-weight: 400;
}

/* Options Grid */
.options-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
}

/* Option Cards */
.option-card {
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.9) 0%, rgba(240, 248, 255, 0.9) 100%);
    border: 2px solid rgba(3, 169, 244, 0.3);
    border-radius: 16px;
    padding: 32px 24px;
    text-align: center;
    transition: all 0.3s ease-in-out;
    cursor: pointer;
    text-decoration: none;
    color: inherit;
    position: relative;
    overflow: hidden;
}

.option-card:hover {
    border-color: #03a9f4;
    transform: translateY(-4px);
    box-shadow: 0 20px 40px rgba(3, 169, 244, 0.2),
                0 8px 16px rgba(3, 169, 244, 0.15);
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(227, 242, 253, 0.95) 100%);
}

.option-card:hover::before {
    opacity: 1;
}

.option-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #03a9f4, #0288d1, #0277bd);
    opacity: 0;
    transition: opacity 0.3s ease-in-out;
}

/* Option Icons */
.option-icon {
    font-size: 2.5rem;
    margin-bottom: 16px;
    display: block;
    color: #03a9f4;
}

.option-card:nth-child(1) .option-icon {
    color: #0288d1;
}

.option-card:nth-child(2) .option-icon {
    color: #039be5;
}

.option-card:nth-child(3) .option-icon {
    color: #03a9f4;
}

.option-card:nth-child(4) .option-icon {
    color: #29b6f6;
}

/* Option Text */
.option-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 8px;
    color: #01579b;
}

.option-description {
    font-size: 0.875rem;
    color: #0277bd;
    line-height: 1.5;
    font-weight: 400;
}

/* Footer */
.footer {
    text-align: center;
    margin-top: 48px;
    padding-top: 32px;
    border-top: 2px solid rgba(3, 169, 244, 0.2);
    color: #0277bd;
    font-size: 0.875rem;
}

/* Responsive Design */
@media (max-width: 768px) {
    .container {
        padding: 32px 24px;
        margin: 16px;
    }
    
    .header {
        margin-bottom: 32px;
        padding-bottom: 24px;
    }
    
    .header h1 {
        font-size: 1.875rem;
    }
    
    .header p {
        font-size: 1rem;
    }
    
    .options-grid {
        grid-template-columns: 1fr;
        gap: 16px;
    }
    
    .option-card {
        padding: 24px 20px;
    }
    
    .option-icon {
        font-size: 2rem;
    }
    
    .footer {
        margin-top: 32px;
        padding-top: 24px;
    }
}

@media (max-width: 480px) {
    .container {
        padding: 24px 16px;
        margin: 8px;
    }
    
    .header h1 {
        font-size: 1.5rem;
    }
    
    .option-card {
        padding: 20px 16px;
    }
}